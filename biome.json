{
  "$schema": "https://biomejs.dev/schemas/1.5.3/schema.json",
  "organizeImports": {
    "enabled": true
  },
  "files": {
    "ignore": ["node_modules/", ".next/", "global.d.ts"]
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true,
      "a11y": {
        "useKeyWithClickEvents": "off"
      },
      "correctness": {
        "useExhaustiveDependencies": "off"
      },
      "suspicious": {
        "noExplicitAny": "off"
      },
      "nursery": {
        "noUnusedImports": "error",
        "useImportType": "error"
      }
    }
  },
  "formatter": {
    "enabled": true,
    "lineWidth": 85,
    "indentStyle": "space"
  }
}
